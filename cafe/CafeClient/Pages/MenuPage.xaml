<Page x:Class="CafeClient.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="Управление меню"
      d:DesignWidth="1366" d:DesignHeight="768" 
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="НАЗАД" 
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Click="Back_Button" 
                HorizontalAlignment="Left" Margin="10,0,0,0"/>

        <TextBlock Text="УПРАВЛЕНИЕ МЕНЮ" 
                   FontSize="28" 
                   FontWeight="SemiBold" 
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <materialDesign:Card Grid.Column="0" Grid.Row="1" Margin="10" VerticalAlignment="Top" Padding="15" UniformCornerRadius="8">
            <Border Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="НОВОЕ БЛЮДО" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#424242"/>

                    <TextBox Text="{Binding NewMenuItem.Name, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Название блюда"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,15"/>

                    <ComboBox ItemsSource="{Binding Categories}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding NewMenuItem.CategoryId, Mode=TwoWay}"
                              materialDesign:HintAssist.Hint="Категория"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,0,15"/>

                    <TextBox Text="{Binding NewMenuItem.Price, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Цена (₽)"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             PreviewTextInput="NumericOnly"
                             Margin="0,0,0,15"/>

                    <TextBox Text="{Binding NewMenuItem.Description, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Описание состава"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Height="80"
                             VerticalContentAlignment="Top"
                             Margin="0,0,0,15"/>

                    <CheckBox IsChecked="{Binding NewMenuItem.Available, Mode=TwoWay}"
                              Content="Доступно для заказа"
                              Margin="0,0,0,20"/>

                    <Separator Margin="0,0,0,15"/>

                    <Button Content="ДОБАВИТЬ В МЕНЮ" 
                            Height="45"
                            Margin="0,0,0,10" 
                            Background="Green" 
                            BorderBrush="Green" 
                            Click="AddMenuItem_Click"/>

                    <Button Content="ОЧИСТИТЬ ФОРМУ" 
                            Height="45"
                            Style="{StaticResource MaterialDesignOutlinedButton}" 
                            Click="ClearForm_Click"/>
                </StackPanel>
            </Border>
        </materialDesign:Card>

        <materialDesign:Card Grid.Column="1" Grid.Row="1" Margin="10" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#F5F5F5" Padding="15,10" BorderBrush="#E0E0E0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Название" FontWeight="Bold" Foreground="Gray"/>
                        <TextBlock Grid.Column="1" Text="Описание" FontWeight="Bold" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Цена" FontWeight="Bold" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="Категория" FontWeight="Bold" Foreground="Gray" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <ListView Grid.Row="1" ItemsSource="{Binding Items}" 
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          HorizontalContentAlignment="Stretch" Padding="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="15,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Name}" 
                                               FontSize="16" FontWeight="Medium" TextWrapping="Wrap" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" Text="{Binding Description}" 
                                               TextWrapping="Wrap" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0"/>

                                    <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat={}{0:N0} ₽}" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>

                                    <TextBlock Grid.Column="3" Text="{Binding Category}" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>

                                    <Button Grid.Column="4"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Удалить блюдо"
                                            Click="DeleteMenuItem_Click"
                                            Foreground="Red"
                                            Width="30" Height="30"
                                            HorizontalAlignment="Right">
                                        <materialDesign:PackIcon Kind="Delete"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>