<Page x:Class="CafeClient.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Управление персоналом">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="НАЗАД" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="Button_Click" 
                    HorizontalAlignment="Left"/>

            <TextBlock Grid.Column="1" 
                       Text="УПРАВЛЕНИЕ ПЕРСОНАЛОМ" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Grid>

        <materialDesign:Card Grid.Row="1" Grid.Column="0" Padding="0" >
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="#F5F5F5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <TextBlock Text="Список сотрудников" FontWeight="SemiBold" FontSize="18"/>
                </Border>

                <ListView x:Name="UsersListView"
                          SelectionChanged="UsersListView_SelectionChanged"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          HorizontalContentAlignment="Stretch"
                          Padding="10">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <materialDesign:PackIcon Kind="AccountCircle" Width="40" Height="40" 
                                                             VerticalAlignment="Center" Foreground="Gray" Margin="0,0,15,0"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FullName}" FontWeight="Bold" FontSize="16"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Login: " Foreground="Gray"/>
                                            <TextBlock Text="{Binding Login}" Foreground="Gray"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Border Grid.Column="2" Background="#E3F2FD" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Role ID: " FontSize="12" Foreground="#1565C0"/>
                                            <TextBlock Text="{Binding RoleId, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" Foreground="#1565C0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1" Grid.Column="2" Padding="20">
            <StackPanel>
                <TextBlock Text="Данные сотрудника" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBox Text="{Binding EditableUser.FullName, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="ФИО сотрудника"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <TextBox Text="{Binding EditableUser.Login, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Логин"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                <PasswordBox x:Name="TxtPassword"
                         materialDesign:HintAssist.Hint="Пароль"
                         Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                         Margin="0,0,0,15"/>

                <ComboBox ItemsSource="{Binding Roles}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding EditableUser.RoleId, Mode=TwoWay}"
                          materialDesign:HintAssist.Hint="Роль"
                          Margin="0,0,0,15"/>


                <Button Content="СОХРАНИТЬ / ДОБАВИТЬ" 
                         Click="Button_Click_1"
                         Height="45"
                         Margin="0,0,0,10"/>

                <Button Content="УДАЛИТЬ ВЫБРАННОГО" 
                        Click="Button_Click_2"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        BorderBrush="Red"
                        Foreground="Red"
                        Height="45"/>
            </StackPanel>
        </materialDesign:Card>

    </Grid>
</Page>